// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// ------------------------------------
// USER & AUTH MODELS
// ------------------------------------
model User {
  id       String   @id @default(cuid())
  email    String   @unique
  password String // Will be a hashed password
  name     String?
  phone    String?
  role     UserRole @default(CUSTOMER)

  // --- WALLET FIELDS ---
  walletBalance Float               @default(0)
  transactions  WalletTransaction[]
  // -------------------

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  addresses Address[]
  orders    Order[]
  cart      Cart?

  deliveries Delivery[]
}

enum UserRole {
  CUSTOMER
  DRIVER
  ADMIN
  SUPER_ADMIN
  PACKER
}

model Address {
  id     String @id @default(cuid())
  street String
  city   String
  zip    String
  lat    Float? // Latitude for mapping
  lng    Float? // Longitude for mapping

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  orders Order[]
}

// ------------------------------------
// WALLET MODELS
// ------------------------------------
model WalletTransaction {
  id          String          @id @default(cuid())
  userId      String
  user        User            @relation(fields: [userId], references: [id])
  amount      Float
  type        TransactionType
  description String
  createdAt   DateTime        @default(now())
}

enum TransactionType {
  CREDIT // Adding money
  DEBIT // Paying for order
}

// ------------------------------------
// CORE PRODUCT & INVENTORY MODELS
// ------------------------------------
model DarkStore {
  id        String      @id @default(cuid())
  name      String // e.g., "Urban Core - Zone 1"
  address   String
  lat       Float
  lng       Float
  inventory StockItem[]
  orders    Order[]
}

model Category {
  id       String    @id @default(cuid())
  name     String    @unique
  products Product[]
}

model Product {
  id          String      @id @default(cuid())
  sku         String      @unique // Stock Keeping Unit
  name        String
  description String?     @db.Text
  price       Float
  imageUrl    String?
  categoryId  String
  category    Category    @relation(fields: [categoryId], references: [id])
  stockItems  StockItem[]
  cartItems   CartItem[]
  orderItems  OrderItem[]
}

// This "join table" tracks how many of each product
// are in which dark store.
model StockItem {
  id          String    @id @default(cuid())
  productId   String
  product     Product   @relation(fields: [productId], references: [id])
  darkStoreId String
  darkStore   DarkStore @relation(fields: [darkStoreId], references: [id])
  quantity    Int       @default(0) // The actual stock level
  updatedAt   DateTime  @updatedAt

  @@unique([productId, darkStoreId])
}

// ------------------------------------
// ORDERING & CART MODELS
// ------------------------------------
model Cart {
  id        String     @id @default(cuid())
  userId    String     @unique
  user      User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  items     CartItem[]
  updatedAt DateTime   @updatedAt
}

model CartItem {
  id        String  @id @default(cuid())
  cartId    String
  cart      Cart    @relation(fields: [cartId], references: [id], onDelete: Cascade)
  productId String
  product   Product @relation(fields: [productId], references: [id])
  quantity  Int

  // --- SUBSTITUTION POLICY ---
  substitution SubstitutionPolicy @default(REFUND)
  // ---------------------------

  @@unique([cartId, productId])
}

model Order {
  id          String      @id @default(cuid())
  userId      String
  user        User        @relation(fields: [userId], references: [id])
  darkStoreId String // Which dark store fulfilled it
  darkStore   DarkStore   @relation(fields: [darkStoreId], references: [id])
  status      OrderStatus @default(PENDING)
  totalPrice  Float

  // --- PAYMENT METHOD ---
  paymentMethod PaymentMethod @default(COD)
  // ----------------------

  // --- COUPON (NEW) ---
  couponId String?
  coupon   Coupon? @relation(fields: [couponId], references: [id])
  // --------------------

  addressId String?
  address   Address? @relation(fields: [addressId], references: [id], onDelete: SetNull)

  // --- DELIVERY SLOTS ---
  deliveryType   DeliveryType  @default(EXPRESS)
  deliverySlotId String?
  deliverySlot   DeliverySlot? @relation(fields: [deliverySlotId], references: [id])
  // ----------------------------

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  items    OrderItem[]
  delivery Delivery?
}

enum PaymentMethod {
  WALLET
  UPI
  COD
}

enum DeliveryType {
  EXPRESS
  STANDARD
}

model DeliverySlot {
  id        String   @id @default(cuid())
  startTime DateTime // e.g., 10:00 AM
  endTime   DateTime // e.g., 11:00 AM
  capacity  Int      @default(5) // Max 5 orders per slot
  orders    Order[]

  @@index([startTime])
}

model OrderItem {
  id        String  @id @default(cuid())
  orderId   String
  order     Order   @relation(fields: [orderId], references: [id])
  productId String
  product   Product @relation(fields: [productId], references: [id])
  quantity  Int
  price     Float // Price at the time of purchase

  // --- SUBSTITUTION POLICY ---
  substitution SubstitutionPolicy @default(REFUND)
  // ---------------------------
}

enum OrderStatus {
  PENDING
  CONFIRMED
  PACKING
  READY_FOR_PICKUP
  OUT_FOR_DELIVERY
  DELIVERED
  CANCELLED
}

enum SubstitutionPolicy {
  REFUND
  REPLACE
}

// ------------------------------------
// COUPON MODEL (NEW)
// ------------------------------------
model Coupon {
  id       String       @id @default(cuid())
  code     String       @unique
  discount Float // e.g., 20.0 (value)
  type     DiscountType @default(PERCENTAGE)
  minOrder Float        @default(0) // Min cart value required
  isActive Boolean      @default(true)
  expiry   DateTime

  orders Order[]
}

enum DiscountType {
  PERCENTAGE // e.g. 10% off
  FIXED // e.g. â‚¹50 off
}

// ------------------------------------
// DELIVERY & DRIVER MODELS
// ------------------------------------
model Delivery {
  id          String      @id @default(cuid())
  orderId     String      @unique
  order       Order       @relation(fields: [orderId], references: [id])
  driverId    String? // Driver can be null initially
  driver      User?       @relation(fields: [driverId], references: [id])
  status      OrderStatus
  pickedUpAt  DateTime?
  deliveredAt DateTime?

  // For live tracking
  driverLat Float?
  driverLng Float?
}

// ------------------------------------
// BANNER MODEL
// ------------------------------------
model Banner {
  id        String   @id @default(cuid())
  imageUrl  String
  title     String?
  subtitle  String?
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
}
